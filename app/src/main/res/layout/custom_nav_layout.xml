<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ScrollView
        android:layout_above="@+id/nav_logoutLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/name_img_display_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/imageplaceholdr"
                android:id="@+id/userImageView"
                />

            <TextView
                android:id="@+id/username_tv_nav"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="@string/name"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_homeLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="@string/home"
                />

            <TextView
                android:id="@+id/nav_home_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_ProfileLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_peron_icon"
                android:contentDescription="@string/imamia_jantri"
                />

            <TextView
                android:id="@+id/nav_pro_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_jantriLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/book"
                android:contentDescription="@string/imamia_jantri"
                />

            <TextView
                android:id="@+id/nav_jantri_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/imamia_jantri"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_qiblaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/qibla"
                android:contentDescription="@string/qibla_direction"
                />

            <TextView
                android:id="@+id/nav_qibla_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/qibla_direction"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_quranLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/quran_icon"
                android:contentDescription="@string/quran"
                />

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/quran"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_duaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/prayinghands"
                android:contentDescription="@string/dua_s"
                />

            <TextView
                android:id="@+id/nav_dua_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/dua_s"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fvrtList_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fvrt_icon"
                android:contentDescription="@string/dua_s"
                />

            <TextView
                android:id="@+id/fvrtList_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/favourites"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_aboutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/aboutus"
                android:contentDescription="@string/dua_s"
                />

            <TextView
                android:id="@+id/aboutus_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/about_us"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_rateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessParent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_rating_star"
                android:contentDescription="@string/dua_s"
                />

            <TextView
                android:id="@+id/rateus_dua_tv"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/rate_us"
                android:layout_marginStart="30dp"
                android:textColor="@color/light_gray"
                android:gravity="start"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_logoutLay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables,UselessParent"
        android:layout_margin="15dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logout"
            android:contentDescription="@string/logout"
            />

        <TextView
            android:id="@+id/navlogout_tv"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:layout_marginStart="30dp"
            android:textColor="@color/light_gray"
            android:gravity="start"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

    </LinearLayout>

</RelativeLayout>