<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".UI.Fragment.UserProfileFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_btn_pro_frag"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/update_btn_pro_frag"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/update_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableStart="@drawable/ic_edit_icon"
                    android:drawablePadding="@dimen/ten"
                    android:padding="@dimen/twenty"
                    android:text="@string/edit"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_iv_frag"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="75dp"
                    android:clickable="false"
                    android:src="@drawable/imageplaceholdr"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/firstname_userProf_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/name_drawable"
                        android:drawablePadding="@dimen/twenty"
                        android:padding="8dp"
                        android:text="@string/first_name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/firstname_userProf_frag_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_bg"
                        android:hint="@string/first_name"
                        android:padding="8dp"
                        android:text="@string/first_name"
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lastname_userProf_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/name_drawable"
                        android:drawablePadding="@dimen/twenty"
                        android:padding="8dp"
                        android:text="@string/first_name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/lastname_userProf_frag_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_bg"
                        android:hint="@string/last_name"
                        android:padding="8dp"
                        android:text="@string/first_name"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/twenty"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/useremail_userProf_Frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:drawableStart="@drawable/ic_email_icon"
                        android:drawablePadding="@dimen/twenty"
                        android:padding="@dimen/eight"
                        android:text="@string/email_address"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/con_number_userpro_Frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/ic_phone_number_icon"
                        android:drawablePadding="@dimen/twenty"
                        android:padding="@dimen/eight"
                        android:text="@string/phone_no"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/con_number_userpro_Frag_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:hint="@string/phone_no"
                        android:inputType="number"
                        android:padding="@dimen/eight"
                        android:text="@string/phone_no"
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dob_userpro_Frag_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty"
                        android:textColor="@android:color/black"
                        android:drawableStart="@drawable/ic_calendar_icon"
                        android:drawablePadding="@dimen/twenty"
                        android:padding="@dimen/eight"
                        android:text="@string/date_of_birth"
                        android:clickable="false"
                        android:enabled="false"
                        android:background="@drawable/edittext_bg"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/gender_userpro_Frag_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:drawableStart="@drawable/gender_drawable"
                        android:drawablePadding="@dimen/twenty"
                        android:padding="@dimen/eight"
                        android:text="@string/gender"
                        android:background="@drawable/edittext_bg"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/gender_userpro_Frag_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/changePassword_Prof_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty"
                    android:drawableStart="@drawable/ic_pass_icon"
                    android:drawablePadding="@dimen/twenty"
                    android:padding="@dimen/eight"
                    android:textColor="@android:color/black"
                    android:text="@string/change_password"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:background="@drawable/edittext_bg"
                    />


                <LinearLayout
                    android:id="@+id/changepwd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/old_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:hint="@string/old_password"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:padding="@dimen/eight"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/forget_password_tv_userFrag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@drawable/edittext_bg"
                        android:textColor="@android:color/black"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="@string/forget_password" />

                    <EditText
                        android:id="@+id/new_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:hint="@string/enter_your_new_password"
                        android:textColor="@android:color/black"
                        android:inputType="textPassword"
                        android:padding="@dimen/eight"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/confirm_new_pass_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@drawable/edittext_bg"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/eight"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/update_btn_pro_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:text="@string/Update"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>
